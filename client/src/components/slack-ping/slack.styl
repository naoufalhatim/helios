slack-ping
  text-align: center
  display: block

  .channel-name
    font-size .5em
    padding 0 10px
    line-height 0

slack-ping div
  display: inline-block
  height: 10px
  width: 10px
  border-radius: 50%
  margin-right: 5px

.message-orbs-enter
  opacity: 0.1

.message-orbs-enter-active
  opacity: 1
  transition: opacity .5s ease-in

.message-orbs-leave-active
  opacity: 0.1

.message-orbs-leave
  transition: opacity .5s ease-in
