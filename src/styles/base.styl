@import url("http://fonts.googleapis.com/css?family=Roboto")

body
  background-color: black
  color: white
  font-family: 'Roboto', sans-serif
  font-size: 46px
  padding: 0
  overflow: hidden

h1
  font-size: 500px
  line-height: .7
  margin: 20px 0

h2
  font-size: 120px

h3
  font-size: 30px

.hours canvas
  margin-bottom: 10px
  width: 100%

body table.weather-graph td
  border-top: none

h4
  margin-bottom: 0

h5
  font-size: 24px
  margin-top: 3px

.weather-graph td
  text-align: center

.bottom
  bottom: 0
  left: 15px
  position: absolute
  right: 15px

.update-message
  color: #aaa
  font-size: 18px
